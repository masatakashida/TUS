  <thead>
    <tr>
      <th>Text</th>
      <th>Testposts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testreplyposts.each do |testreplypost| %>
      <tr>
        <td><%= testreplypost.text %></td>
        <td><%= testreplypost.testpost_id %></td>
        <td><%= link_to 'Show', testreplypost %></td>
        <td><%= link_to 'Edit', edit_testreplypost_path(testreplypost) %></td>
        <td><%= link_to 'Destroy', testreplypost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
