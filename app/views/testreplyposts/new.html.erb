<h1>新しくコメントをつける</h1>

<%= render 'form', testreplypost: @testreplypost %>

<%= link_to 'Back', testreplyposts_path %>

<h1>エスキス者一覧</h1>

<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>エスキス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testposts.each do |testpost| %>
      <tr>
      	<td><%= testpost.id %></td>
        <td><%= testpost.text %></td>
        <td><%= link_to 'Show', testpost %></td>
        <td><%= link_to 'Edit', edit_testpost_path(testpost) %></td>
        <td><%= link_to 'Destroy', testpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
